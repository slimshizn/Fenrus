@page "/settings/system/docker"
@namespace Fenrus.Pages
@inherits CommonPage<Fenrus.Models.DockerServer>

<PageTitle>Fenrus - @lblTitle</PageTitle>

<FenrusPage Title="@lblTitle" Icon="fa-brands fa-docker" PageDescription="@lblDescription">
    <Body>
    
    <FenrusTable @ref=Table TItem="Models.DockerServer" Data=@Items>
        <ToolBar>
            <FenrusTableButton Label="@lblAdd" Icon="fa-solid fa-plus" Clicked="() => Add()" />
        </ToolBar>
        <Columns>
            <FenrusTableColumn TItem="Models.DockerServer" ColumnName="Name">
                <Header>@lblName</Header>
                <Cell Context="item">
                    <i class="fa-brands fa-docker"></i>
                    <a @onclick="() => Edit(item)" @onclick:preventDefault="true" href="#">@item.Name</a>
                </Cell>
            </FenrusTableColumn>
            <FenrusTableColumn TItem="Models.DockerServer" ColumnName="Actions" Width="10rem">
                <Header></Header>
                <Cell Context="item">
                    <div class="actions">
                        <span title="@lblEdit" class="fa-solid fa-pen-to-square" @onclick="() => Edit(item)"></span>
                        <span title="@lblDelete" class="fa-solid fa-trash" @onclick="() => Remove(item)"></span>
                    </div>
                </Cell>
            </FenrusTableColumn>
        </Columns>
    </FenrusTable>
        
    </Body>
</FenrusPage>